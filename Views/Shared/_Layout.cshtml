<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FuriaPulse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            background-image: url('/img/bg-furia.png'); 
            background-repeat: no-repeat;
            background-position: center;
            background-size: 45%;
            background-attachment: fixed;
            color: #212529;
            font-family: 'Segoe UI', sans-serif;
        }

        h2.text-primary {
            color: #212529 !important; 
            font-weight: bold;
            text-transform: uppercase;
        }

        span.text-primary{
            color: #212529 !important; 
            font-weight: bold;
            text-transform: uppercase;
        }

        .btn-modern {
            background: linear-gradient(to right, #111, #333);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-modern:hover {
                background: linear-gradient(to right, #000, #222);
                color: #f1f1f1;
                transform: scale(1.03);
            }

        .logo-furia {
            max-width: 120px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container mt-4 bg-light p-4 rounded shadow-sm">
        <header class="mb-4 text-center">
            <img src="/img/bg-furia.svg" alt="FURIA Logo" class="logo-furia mb-3" />
            <h2 class="text-primary">FuriaPulse</h2>
            <hr />
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top mt-5 pt-3 text-muted text-center">
            <p>&copy; 2025 - Know Your Fan</p>
        </footer>
    </div>
</body>
</html>
