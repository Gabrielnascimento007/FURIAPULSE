@model FuriaPulseWeb.Models.ErrorViewModel

@{
    ViewData["Title"] = "Erro";
}

<h1 class="text-danger">Erro</h1>
<h2 class="text-danger">Ocorreu um erro ao processar sua solicitação.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID da Requisição:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>
    Volte para a <a asp-controller="Home" asp-action="Index">página inicial</a> ou contate o suporte.
</p>
